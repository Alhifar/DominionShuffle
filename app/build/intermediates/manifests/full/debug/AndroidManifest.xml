<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.spellenclubeindhoven.dominionshuffle"
    android:installLocation="auto"
    android:versionCode="56"
    android:versionName="1.8.16" >

    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="4" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="false"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:name="nl.spellenclubeindhoven.dominionshuffle.Application"
        android:description="@string/app_description"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="nl.spellenclubeindhoven.dominionshuffle.SelectActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="nl.spellenclubeindhoven.dominionshuffle.ReleaseNotesActivity" />
        <activity
            android:name="nl.spellenclubeindhoven.dominionshuffle.ResultActivity"
            android:label="@string/result_title" />
        <activity android:name="nl.spellenclubeindhoven.dominionshuffle.ShowGroupActivity" />
        <activity android:name="nl.spellenclubeindhoven.dominionshuffle.LoadSaveActivity" />
        <activity
            android:name="nl.spellenclubeindhoven.dominionshuffle.LimitActivity"
            android:label="@string/limit_title" />
    </application>

</manifest>